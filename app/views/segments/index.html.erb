<h1>Listing segments</h1>

<table>
  <tr>
    <th>Timestart</th>
    <th>Timeend</th>
    <th>Speaker</th>
    <th>Text</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @segments.each do |segment| %>
  <tr>
    <td><%= segment.timestart %></td>
    <td><%= segment.timeend %></td>
    <td><%= segment.speaker %></td>
    <td><%= segment.text %></td>
    <td><%= link_to 'Show', segment %></td>
    <td><%= link_to 'Edit', edit_segment_path(segment) %></td>
    <td><%= link_to 'Destroy', segment, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

